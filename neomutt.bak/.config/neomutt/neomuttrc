# # vim: filetype=muttrc

# https://gideonwolfe.com/posts/workflow/neomutt/intro/

# General

source ~/.config/neomutt/settings
source ~/.config/neomutt/colors
source ~/.config/neomutt/mappings

# Accounts

source ~/.config/neomutt/accounts/main
folder-hook $folder 'source ~/.config/neomutt/accounts/main'

source ~/.config/neomutt/accounts/utn
folder-hook $folder 'source ~/.config/neomutt/accounts/utn'

source ~/.config/neomutt/accounts/mypro
folder-hook $folder 'source ~/.config/neomutt/accounts/mypro'
